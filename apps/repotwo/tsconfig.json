{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@styles/*": ["src/styles/*"],
      "@atoms/*": ["src/components/atoms/*"],
      "@molecules/*": ["src/components/molecules/*"],
      "@organisms/*": ["src/components/organisms/*"],
      "@data/*": ["src/data/*"],
      "@utils/*": ["src/utils/*"],
      "@services/*": ["src/services/*"],
      "@context/*": ["src/context/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "**/node_modules", "../../node_modules/", "**/*.d.ts"]
}
